<nav class="navbar navbar-dark bg-success text-white">
  <div class="navbar-brand"><%= link_to 'ウバポス', posts_path,class: "link" %><i class="fas fa-biking"></i></div>
</nav>

<h2 class = "text-center mt-5">コメント一覧</h2>
<div class="container">
  <div class="row">
    <div class="list-group list-group-flush mx-auto mb-5" style="width: 50rem;">
    <div class="list-group-item list-group-item-success mt-2 border-left border-right"><%= @post.shopname %></div>
    <div class="list-group-item border-left border-right border-bottom"><%= @post.shopcontent %></div>
  </div>
</div>

<div class = "container">
 
  <% @comments.each do |c| %>
    <div class = "row">
      <div class="list-group list-group-flush mx-auto col-xl-9">
        <div class="list-group-item list-group-item-success border" style="height: 50px;">
          <%= c.username%>:
        </div>
        <div class="list-group-item border ">
          <%= c.content %>
        </div>
      </div>
    </div>
  <% end %>
</div>
    
 <h2 class = "text-center mt-5">コメントする</h2>
<div class = "container">
  <div class = " form-group mx-auto border border-success p-4 col-xl-9">
    <div class = "row">
      <div class = "col-xl-9">
      <%= form_with model: [@post,@comment] do |f| %>
      <% flash.each do |key, value| %>
      <div class = "alert alert-danger" role="alert"><%= value %></div>
    <% end %>
        <%= f.text_area :username, class: 'form-control mb-4', placeholder: "ハンドルネーム", :value =>"通りすがりの配達員"%>
        <%= f.text_area :content, class: 'form-control',  placeholder: "コメント内容"%>
        <%= f.hidden_field :post_id, value: @post.id %>
        <%= f.submit "投稿する \uf086",class: 'btn btn-success mt-4 btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>